
<h1 style="color: blue;">Ingresar Datos</h1>
<br>

<form action="./productos" method="post" name="productos" >

    <div class="form-group">
        <labe for="nombre">Producto</label>
        <input type="text" placeholder="Ingresar Producto" id="titulo" name="titulo" class="form-control">
    </div>

    <div class="form-group">
        <label for="apellido">Precio</label>
        <input type="text" placeholder="Ingresar Precio" id="precio" name="precio" class="form-control">
    </div>

    <div class="form-group">
        <labe for="edad">Imagen</labe>
        <input type="text" placeholder="Subir Imagen" id="imagen" name="imagen" class="form-control">
    </div>
    <button>Enviar</button>
</form>


<h2 style="color:green">PRODCUTOS</h2>



 {{#if productos}}
 <div class="table-responsive">
    <table class="table table-dark">
        <tr style="color:yellow">
            <th>Titulo</th>
            <th>Precio</th>
            <th>Imagen</th> 
        </tr>
{{#each productos }}
<tr>
    <td> {{this.titulo}} </td>
    <td> {{this.precio}} </td>
    <td> <img src="{{ this.url }}" alt="{{ this.titulo}}" width="25"> </td>
    {{/each}}
</tr> 
    </table>


{{else}}
    <h3>No se encontraron datos</h3>
{{/if}}
</div>

